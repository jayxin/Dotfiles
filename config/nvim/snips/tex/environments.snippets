global !p
def env(name):
	[x,y] = vim.eval("vimtex#env#is_inside('" + name + "')")
	return x != '0' and y != '0'
endglobal

# Mirrored tabstops
snippet env "Environments" bA
\\begin{$1}
	$0
\\end{$1}
endsnippet
# see also :h UltiSnips-mirrors

snippet doc "LaTeX document structure" b
\documentclass$1{${2:article}}



\begin{document}
$0
\end{document}
endsnippet

snippet tpl "Basic template" b
\documentclass[a4paper]{article}

